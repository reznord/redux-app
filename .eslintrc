{
	"extends": "airbnb",
	"parser": "babel-eslint",
	"plugins": [
		"import"
	],
	"env": {
		"browser": true,
		"node": true,
	},
	"settings": {
		"import/parser": "babel-eslint",
		"ecmaFeatures": [
			"classes",
			"jsx"
		]
	},
  "rules": {
    "no-shadow": 0,
    "global-require": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "react/forbid-prop-types": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "react/jsx-filename-extension": 0,
    "react/prefer-stateless-function": 0,
    "jsx-ally/no-static-element-interactions": 0,
    "no-console": [
			1,
			{
				"allow": [
					"debug",
					"warn",
					"error"
				]
			}
		]
  },
	"globals": {
		"React": true,
		"ReactDOM": true,
		"__DEV__": true,
		"__PROD__": true,
		"__USE_MOCKS__": true,
		"__API_BASE_MACRO__": true,
		"__IMAGES_URL_BASE__": true
	}
}
